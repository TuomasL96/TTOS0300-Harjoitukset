<Window x:Class="Harj2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harj2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="inputBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Eurot/markat" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.122,0.338"/>
        <Button x:Name="toEuroButton" Content="Muuta euroiksi" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="120" Click="toEuroButton_Click"/>
        <Button x:Name="toMarkkaButton" Content="Muuta markoiksi" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="120" Click="toMarkkaButton_Click"/>
        <TextBlock x:Name="outputBlock" HorizontalAlignment="Left" Margin="143,31,0,0" TextWrapping="Wrap" Text="Tulos:" VerticalAlignment="Top" Height="164" Width="364" FontSize="25"/>

    </Grid>
</Window>
